
<div class="container">
  <ul class="nav nav-tabs">
    <li class="active"><a data-toggle="tab" href="#home">My posts</a></li>
    <li><a data-toggle="tab" href="#menu1">Subscribed posts</a></li>
    <li><a data-toggle="tab" href="#menu2">Other users</a></li>
  </ul>

  <div class="tab-content">
    <div id="home" class="tab-pane fade in active">
    	<% @myposts.each do |post|%>
			<%= render post, locals: {post: post}%>
 		<% end %>
    </div>
    <div id="menu1" class="tab-pane fade">
      
    </div>
    <div id="menu2" class="tab-pane fade">
       <% @others_posts.each do |other| %>
		<div class="row col-md-10 jumbotron" >
			<div class="col-md-6">
				<%= image_tag(other.image_url.to_s, size: "180x150")%><br>
				<%= other.description %>
			</div>
			<div class="col-md-6">
				<%= link_to "Show post" , post_path(other), :class => 'btn btn-primary' %>	
				<%= link_to "view user" , user_about_path(id: other.user_id) ,:class => 'btn btn-primary'%>			
			</div>
			<br>
		</div>
		<% end %>
    </div>
  </div>
</div>
<%= render 'modal' %>