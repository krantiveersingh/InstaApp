
<div class="row">
	<div class="jumbotron col-md-5 ">
			<%= image_tag(@post.image_url.to_s, size: "350x300")%>
			<br>
			<h3><%= @post.description %></h3>
	</div>
	<div class="col-md-6 ">
			<%= render 'comments/form'%>
			<br>
			
			Comments:
			<%= @post.comments.count %>

			<%= @post.comments.each do |f| %>
			<div class="well">
			 	 <%= f.comment %>
				 <div class="col-md-">
				 	
				 </div>
			 </div><br>
			<% end %>

	</div>
</div>